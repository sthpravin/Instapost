<div class="container">
  <div class="prof_header">
    <div class="row">
      <div class="col-xs-4">
        <%= image_tag @user.photo, class: 'prof_pic' %>
      </div>
      <div class="col-xs-8">
        <div class="user_header">
          <div class="row">
            <div class="col-xs-6">
                <div class="col-xs-8">
                  <h1 class = "username"><%= @user.name %></h1>
                </div>
                <div class="col-xs-4">
                  <a href="#" ><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
                  <a href="#" ><i class="fa fa-twitter-square" aria-hidden="true"></i></a>
                </div>                
            </div>
            <div class="col-xs-6">
              <%= link_to 'EDIT PROFILE', edit_user_registration_path(@user), class: 'user_edit_button btn btn-default' if user_signed_in? && @user == current_user %>
            </div>
          </div>  
        </div>
        <span class="count"> <%= pluralize(@user.posts.count, 'post') %></span>
      </div>
    </div>
  </div>

  <div class="prof_post_box">
    <div class="row">
      <div class=".col-xs-6">
      <% @user.posts.each do |post| %>
          <div id="profile_grid" class="col-xs-6">
            <%= image_tag post.photo_url, class: 'prof_show' %>
          </div>
          <div class="show_button">
              <%= link_to 'Show Post', post_path(post.id), method: :get, class: 'btn btn-primary' %>
              <%= link_to 'Edit Post', edit_post_path(post.id), class: 'btn btn-primary' %>
              <%= link_to 'Delete Post', post_path(post.id), method: :delete, class: 'btn btn-primary' %>
           </div>
      </div>
      <% end %>
    </div>
  </div>
</div>